<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
  <title>GPWebsite</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <script src="/script/script.js" defer>
  </script>
  <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/cba779aa10.js" crossorigin="anonymous"></script>

</head>
<body>
  <div class="content-wrap">

    <!-- NAVBAR -->
    <section class="navbar">
      <div class="menu-center">
        <a href="/" class="site-icon">
          <div>Jewellery Shop</div>
        </a>
        <!-- NAVBAR LINKS -->
        <div class="navbar-links">
          <!-- LINK 1 -->
          <div class="drop-down">
            <a class="drop-down-title" href="/admin">Admin</a>
            <div class="drop-down-list">
              <% if (login) { %>
                <form action="/admin/logout?_method=DELETE" method="POST">
                  <button class="logout drop-down-link" type="submit">Logout</button>
                </form>
              <% } %>
            </div>
          </div>
          <!-- LINK 2 -->
          <a class="drop-down-title" href="/about">About</a>
          <!-- LINK 3 -->
          <div class="drop-down">
            <a class="drop-down-title" href="/jewellery/all">Jewellery</a>
            <div class="drop-down-list">
              <a class="drop-down-link" href="/jewellery/earring">Earrings</a>
              <a class="drop-down-link" href="/jewellery/necklace">Necklaces</a>
              <a class="drop-down-link" href="/jewellery/bracelet">Bracelets</a>
              <a class="drop-down-link" href="/jewellery/ring">Rings</a>
            </div>
          </div>
          <div class="cart-btn">
            <span class="cart-icon">
              <i class="fas fa-shopping-bag"></i>
            </span>
            <div class="number-in-cart">0</div>
          </div>
        </div>
      </div>
    </section>

    <!--Start of Cart-->
    <div class="cart-overlay">
      <div class="cart">
        <span class="close-cart">
          <i class="fas fa-window-close"></i>
        </span>
        <h2>my cart</h2>
        <div class="cart-content"></div>
        <div class="cart-footer">
          <h2>Total : Â£
            <span class="total">0</span>
          </h2>
          <a class="checkout" href="/jewellery/checkout">Checkout</a>
        </div>
      </div>
    </div>
    <%- body %>
  </div>
  <footer class="footer">
    <ul class="footerList">
      <li>About</li>
      <li>FAQ</li>
      <li>Contact us</li>
      <li>Delivery</li>
      <li>Terms and Conditions</li>
      <li>Privacy and Cookie Policy</li>
      <li>Accessibility</li>
    </ul>
  </footer>

</body>
</html>
